<% @locations.each do |location| %>
<%= link_to location_path(location) do %>
  <div class="p-1 card d-flex flex-column justify-content-end" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path location.photos.first.key, height: 300, width: 400, crop: :fill %>'); height: 300px; width: 400px">
    <div class="card-info"><h2><%= location.name %></h2></div>
  </div>
  <% end %>
<% end %>